<%= form_for @user do |f| %>
    <p>
      <%= label_tag :email %>
      <%= f.text_field :email %>
    </p>
    <p>
      <%= label_tag :name %>
      <%= f.text_field :name %>
    </p>
    <%= f.submit "Update Data" %>
<% end %>
<hr/>
<h3>User Roles</h3>
<%= form_tag('/users/grantRoles') do %>
    <%= hidden_field_tag :id, @user.id %>
    <% @roles.each do |role| %>
        <%= hidden_field_tag(role.name, 0) %>

        <%= check_box_tag role.name, 1, @user.has_role?(role.name) %>
        <%= label_tag role.name %>
        <br>
    <% end %>
    <%= submit_tag "Update User Privliges" %>
<% end %>

