<h1>Listing users</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Roles</th>
    <th>Actions</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><% user.roles.each do |r|  %><%= r.name %><% end %></td>
        <% if can? :manage,User %>
        <td><%= link_to "Show","#" %> | <%= link_to "Edit","#" %> | <%= link_to "Delete","#" %>  </td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
<% if can? :manage,User %>

<% end %>