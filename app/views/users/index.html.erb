<h1>Listing users</h1>
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Roles</th>
    <% if can? :manage, User %>
        <th>Actions</th>
    <% end %>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td>
          <% user.roles.each do |r| %>
             <%= r.name %>
          <% end %>
        </td>
        <% if can? :manage, User %>
            <td><%= link_to "Show", user_path(user.id) %> | <%= link_to "Edit", edit_user_path(user.id) %>
              | <%= link_to "Delete", "#" %>  </td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>
<br>